<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.WeatherApp" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Default app fonts -->
        <item name="android:fontFamily">@font/googlesans</item>

        <item name="materialButtonStyle">@style/Theme.WeatherApp.Button</item>
        <item name="textInputStyle">@style/Theme.WeatherApp.TextInputLayout</item>

    </style>

    <style name="Theme.WeatherApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Window background. -->
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="Theme.WeatherApp.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="Theme.WeatherApp.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="Theme.WeatherApp.Toolbar.Title" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/googlesans_bold</item>
    </style>

    <style name="Theme.WeatherApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/googlesans_medium</item>
    </style>

    <style name="Theme.WeatherApp.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">2dp</item>
        <item name="hintTextColor">@color/grey_700</item>
        <item name="android:textColor">@color/grey_900</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorEnabled">true</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
    </style>

    <style name="ThemeOverlay.App.TextInputLayout" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="editTextStyle">@style/Theme.WeatherApp.EditText</item>
    </style>

    <style name="Theme.WeatherApp.EditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="fontFamily">@font/googlesans_medium</item>
        <item name="android:fontFamily">@font/googlesans_medium</item>
        <item name="android:textColor">@color/grey_900</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
    </style>

</resources>